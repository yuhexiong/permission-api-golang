PermissionDefs:
  ChangePassword:
    Category: "PASSWORD"
    Code: "changePassword"
  CreateUser:
    Category: "USER"
    Code: "createUser"
  CreateSystemUser: # 寫於api中
    Category: "USER"
    Code: "createSystemUser"
  CreateUserPermission:
    Category: "USER-PERMISSION"
    Code: "createMapUserPermission"
  FindUserPermission:
    Category: "USER-PERMISSION"
    Code: "findUserPermission"
  FindPermission:
    Category: "PERMISSION"
    Code: "findPermission"
  UpdateSetting:
    Category: "SETTING"
    Code: "updateSetting"
  CreateTask:
    Category: "TASK"
    Code: "createTask"
  FindTask:
    Category: "TASK"
    Code: "findTask"

APIToPermission:
  - Url: "/user/:userId/password"
    Methods: "PATCH"
    PermissionName: "ChangePassword"
  - Url: "/user"
    Methods: "POST"
    PermissionName: "CreateUser"
    PermissionOp: "W"
  - Url: "/userPermission"
    Methods: "POST"
    PermissionName: "CreateUserPermission"
    PermissionOp: "W"
  - Url: "/userPermission/find"
    Methods: "POST"
    PermissionName: "FindUserPermission"
    PermissionOp: "R"
  - Url: "/userPermission/:id"
    Methods: "DELETE"
    PermissionName: "CreateUserPermission"
    PermissionOp: "W"
  - Url: "/permission/find"
    Methods: "POST"
    PermissionName: "FindPermission"
    PermissionOp: "R"
  - Url: "/setting/:code/:value"
    Methods: "PATCH"
    PermissionName: "UpdateSetting"
    PermissionOp: "W"
  - Url: "/task"
    Methods: "POST"
    PermissionName: "CreateTask"
    PermissionOp: "W"
  - Url: "/task/find"
    Methods: "POST"
    PermissionName: "FindTask"
    PermissionOp: "R"
  - Url: "/task/:id/:checked"
    Methods: "PATCH"
    PermissionName: "CreateTask"
    PermissionOp: "W"
  - Url: "/task/:id"
    Methods: "DELETE"
    PermissionName: "CreateTask"
    PermissionOp: "W"